<% layout('/Layouts/boilerplate') %>
<div class="row">
  <div class="col-8" offset-2>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
     <div>
      <label for="Title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control"/>
    </div>
      
      <div>
        <label for="Description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
      ></textarea>
    </div>
      <div>
        <label for="Image" class="form-label">Image</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>
    <div class="row">
    <div class="col-5">
      <label for="Price" class="form-label">Price</label>
      <input name="listing[price]" placeholder="enter price" type="number"  class="form-control" />
    </div>
    <div class="col-7">
      <label for="Country" class="form-label">Country</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control"/>
    </div>
  </div>
     <div>
      <label for="Location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
      />
    </div><br>
      <button class="btn btn-success">Add</button>
    
    </form> <br> 
  </div> 
  </div>

